@{
    ViewBag.Title = "خانه";
    ViewBag.Description = "هر داستانی غایتی داره، هر روایتی رویایی؛ اما رویای راوی روایته. اهل عالم همه بازیچه‌ی رویاهان و بازیگر داستان‌ها، اما راوی فقط تماشاچی‌اش. فارغ از نمای نزدیک نمایش و هیاهو و های‌و‌هوی قصه گوشه‌ای نشسته، از یک زاویه‌ی بالاتر به همه‌چیز خیره میشه؛ پیکی برداشته و روایتی آغاز میکنه.";
    ViewBag.NoAside = true;
}

<div style="display: flex; flex-direction: row; overflow-x: scroll;">
    @foreach (PostResponseDTO post in ViewBag.Bannar)
    {
        <div style="min-width: 400px; max-width: 401px; min-height: 650px; max-height: 651px; margin-left: 10px; margin-right: 10px;"> @await Html.PartialAsync("PostPartial", post) </div>
    }
</div>
<br /><br />
<h3>تازه‌ترین‌ها</h3>
<div style="display: flex; flex-direction: row; overflow-x: scroll;">
    @foreach (PostResponseDTO post in ViewBag.Newest)
    {
        <div style="min-width: 270px; max-width: 271px; min-height: 500px; max-height: 451px; margin-left: 10px; margin-right: 10px;"> @await Html.PartialAsync("PostPartial", post) </div>
    }
</div>
<br /><br />
<h3>پربازدیدترین‌ها</h3>
<div style="display: flex; flex-direction: row; overflow-x: scroll;">
    @foreach (PostResponseDTO post in ViewBag.MostViewed)
    {
        <div style="min-width: 270px; max-width: 271px; min-height: 500px; max-height: 451px; margin-left: 10px; margin-right: 10px;"> @await Html.PartialAsync("PostPartial", post) </div>
    }
</div>
