@using Weblog.Core.Domain.Entities
@model Subscriber
@{
    ViewBag.Title = "خبرنامه";
    ViewBag.Description = "عضویت در خبرنامه";
}

<h5>با عضویت در خبرنامه همزمان با انتشار مطالب جدید از آن با خبر شوید.</h5>

<form action="~/newsletter/register" method="post">
    <label asp-for="Email">برای عضویت ایمیل خود را وارد کنید:</label>
    <input asp-for="Email" class="form-input" />
    <button class="button button-green-back" style="width: 50; margin: 20px;">ارسال</button>
    <span asp-validation-for="Email" style="color:red;"></span>
    @if (ViewBag.Duplicated != null)
    {
        <span style="color: red;">@ViewBag.Duplicated</span>
    }
</form>

