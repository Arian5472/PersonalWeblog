@model UserUpPassDTO
@{
    ViewBag.Title = "تغییر گذرواژه";
    ViewBag.Description = "تغییر گذرواژه";
    ViewBag.Hidden = true;
}

<h4>برای تغییر گذرواژه اطلاعات لازمه را وارد نمایید:</h4>

<form action="~/account/editPassword" method="post" enctype="multipart/form-data">
    <div class="flex w-50">
        <div class="w-25">
            <label asp-for="CurrentPass" class="form-lable">
                گذرواژه‌ی کنونی
            </label>
        </div>
        <div class="w-60">
            <input asp-for="CurrentPass" class="form-input" />
            <span asp-validation-for="CurrentPass" style="color:red;"></span>
            @if (ViewBag.WrongPass != null)
            {
                <span style="color:red;">@ViewBag.WrongPass</span>
            }
        </div>
    </div>
    <br />
    <div class="flex w-50">
        <div class="w-25">
            <label asp-for="Password" class="form-lable">
                گذرواژه
            </label>
        </div>
        <div class="w-60">
            <input asp-for="Password" class="form-input" />
            <span asp-validation-for="Password" style="color:red;"></span>

        </div>
    </div>
    <br />
    <div class="flex w-50">
        <div class="w-25">
            <label asp-for="RepeatPassword" class="form-lable">
                تکرار گذرواژه
            </label>
        </div>
        <div class="w-60">
            <input asp-for="RepeatPassword" class="form-input" />
            <span asp-validation-for="RepeatPassword" style="color:red;"></span>
        </div>
    </div>
    <br />
    <button class="button button-green-back" style="width: 50; margin: 20px;">ویرایش</button>
</form>

