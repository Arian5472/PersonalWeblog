@model UserResetPassDTO
@{
    ViewBag.Title = "بازنشانی گذرواژه";
    ViewBag.Description = "بازنشانی گذرواژه";
    ViewBag.Hidden = true;
}

<h4>کد فراموشی گذرواژه به ایمیل شما ارسال شد، برای بازنشانی گذرواژه اطلاعات لازمه را وارد نمایید:</h4>

<form action="~/account/ResetPassword" method="post">
    <input asp-for="Email" value=@ViewBag.Email hidden />
    <div class="flex w-50">
        <div class="w-25">
            <label asp-for="Token">
                کد فراموشی
            </label>
        </div>
        <div class="w-60">
            <input asp-for="Token" class="form-input" />
            <span asp-validation-for="Token" style="color: red;"></span>
            @if (ViewBag.WrongCode != null)
            {
                <span style="color: red;">@ViewBag.WrongCode</span>
            }
        </div>
    </div>
    <br />
    <div style="font-size: 11px;">در صورت عدم دریافت کد پوشه‌ی اسپم خود را نیز چک کنید.</div>
    <br />
    <div class="flex w-50">
        <div class="w-25">
            <label asp-for="Password" class="form-lable">
                گذرواژه
            </label>
        </div>
        <div class="w-60">
            <input asp-for="Password" class="form-input" />
            <span asp-validation-for="Password" style="color:red;"></span>

        </div>
    </div>
    <br />
    <div class="flex w-50">
        <div class="w-25">
            <label asp-for="RepeatPassword" class="form-lable">
                تکرار گذرواژه
            </label>
        </div>
        <div class="w-60">
            <input asp-for="RepeatPassword" class="form-input" />
            <span asp-validation-for="RepeatPassword" style="color:red;"></span>
        </div>
    </div>
    <button class="button button-green-back" style="width: 50; margin: 20px;">بازنشانی</button>
</form>

