@model UserSigninDTO
@{
    ViewBag.Title = "ورود";
    ViewBag.Description = "ورود کاربران";
    ViewBag.Hidden = true;
}

<h4>برای ورود اطلاعات خود را وارد نمایید:</h4>

<form action="~/account/signin?ReturnUrl=@Context.Request.Query["ReturnUrl"]" method="post">
    <div class="flex w-50">
        <div class="w-25">
            <label asp-for="Email" class="form-lable">
                ایمیل
            </label>
        </div>
        <div class="w-60">
            <input asp-for="Email" class="form-input" />
            <span asp-validation-for="Email" style="color:red;"></span>
            @if (ViewBag.NotFound != null)
            {
                <span style="color:red;">@ViewBag.NotFound</span>
            }
        </div>
    </div>
    <br />
    <div class="flex w-50">
        <div class="w-25">
            <label asp-for="Password" class="form-lable">
                گذرواژه
            </label>
        </div>
        <div class="w-60">
            <input asp-for="Password" class="form-input" />
            <span asp-validation-for="Password" style="color:red;"></span>
            @if (ViewBag.WrongPassword != null)
            {
                <span style="color:red;">@ViewBag.WrongPassword</span>
            }
        </div>
    </div>
    <div class="flex w-50">
        <div class="w-25">
            <label asp-for="RememberMe" class="form-lable">
                مرا به خاطر بسپار
            </label>
        </div>
        <div class="w-60">
            <input asp-for="RememberMe" class="form-input" />
        </div>
    </div>
    <a href="~/account/forgetpassword">فراموشی گذرواژه</a>
    <button class="button button-green-back" style="width: 50; margin: 20px;">ورود</button>
</form>

