@model UserUpdateDTO
@{
    ViewBag.Title = "ویرایش پروفایل";
    ViewBag.Description = "ویرایش اطلاعات کاربری";
    ViewBag.Hidden = true;
}

<h4>اطلاعات جدید را وارد نمایید:</h4>

<form action="~/account/edit" method="post" enctype="multipart/form-data" style="width: 100%; box-sizing: border-box;">
    <div class="flex w-50">
        <div class="w-25">
            <label asp-for="Name" class="form-lable">
                نام
            </label>
        </div>
        <div class="w-60">
            <input asp-for="Name" class="form-input" />
            <span asp-validation-for="Name" style="color:red;"></span>
        </div>
    </div>
    <br />
    <div class="flex w-50">
        <div class="w-25">
            <label asp-for="Email" class="form-lable">
                ایمیل
            </label>
        </div>
        <div class="w-60">
            <input asp-for="Email" class="form-input" />
            <span asp-validation-for="Email" style="color:red;"></span>
            @if (ViewBag.Duplicated != null)
            {
                <span style="color:red;">@ViewBag.Duplicated</span>
            }
        </div>
    </div>
    <br />
    <div class="flex w-50">
        <div class="w-25">
            <label asp-for="Bio" class="form-lable">
                بیو
            </label>
        </div>
        <div class="w-60">
            <textarea asp-for="Bio" type="" class="form-input"></textarea>
            <span asp-validation-for="Bio" style="color:red;"></span>
        </div>
    </div>
    <br />
    <div class="flex w-50">
        <div class="w-25">
            <label asp-for="Profile" class="form-lable">
                تصویر پروفایل
            </label>
        </div>
        <div class="w-60">
            <input asp-for="Profile" class="form-input" accept=".jpg"/>
            <span asp-validation-for="Profile" style="color:red;"></span>
            @if (ViewBag.FormatError != null)
            {
                <span style="color:red;">@ViewBag.FormatError</span>
            }
        </div>
    </div>
    <button class="button button-green-back" style="width: 50; margin: 20px;">ویرایش</button>
</form>

