<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="language" content="fa" />
    <link rel="icon" type="image/jpeg" href="~/pics/logo.jpg" />
    <title>@ViewBag.Title</title>
    <meta name="description" contents=@ViewBag.Description />
    @if (ViewBag.Hidden == null)
    {
        <meta name="robots" content="all" />
    }
    else
    {
        <meta name="robots" content="noindex" />
    }
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/StyleSheet.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @RenderSection("head", required: false)
</head>

<body>
    <header>
        <div class="header">
            <h2 style="font-size: 56px">رویای راوی</h2>
            <img src="~/pics/Logo.jpg" alt="لوگو" style="width: 160px; border-radius: 100%; margin: 0px;" />
        </div>
        <nav>
            <a href="~/">خانه</a>
            @if (User.Identity.IsAuthenticated)
            {
                <a href="~/account/panel">پنل</a>
            }
            <a href="~/posts">مطالب</a>
            <i class="fa fa-search"></i>
        </nav>
    </header>

    
    <div class="container">
        @if (ViewBag.NoAside == null)
        {
            <main>
                @RenderBody()
            </main>
            <aside>
                @await Component.InvokeAsync("Side")
            </aside>
        } else
        {
            <main style="width: 100%;">
                @RenderBody()
            </main>
        }
    </div>

    <footer>
        <a href="~/newsletter">خبرنامه</a>
        <a href="~/about">درباره</a>
        <a href="~/contactus">ارتباط با ما</a>
        <div style="margin-top: 40px;">
            نشر مطالب با ذکر منبع و ارجاع به مرجع بلامانع است.
        </div>
    </footer>
</body>
</html>
